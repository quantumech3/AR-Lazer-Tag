<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noNetwork"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnDiscover"
        style="@style/MtrlBorderlessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="@string/do_discovery" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnDiscover"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Version X.YY.ZZ" />

    <TextView
        android:layout_above="@id/tvVersion"
        style="@style/RTLS_manager"
        android:text="@string/app_name" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnInstructions"
        android:layout_below="@id/btnDiscover"
        style="@style/MtrlBorderlessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="@string/screen_title_instructions" />

</RelativeLayout>
