<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipChildren="false"
    >
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:text="This is a custom poet-picker dialog, with an irrelevant rant on it. I made this to express my gratitude to all Google developers involved in making the fabulous appCompat library. Congratulations!"
        />
    
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:clipChildren="false"
        >
        <RadioButton android:id="@+id/radio_ja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radnoti Miklos"
            style="@style/AppCompatRadioButtonInDialog"
            android:checked="true"
            />
        <RadioButton android:id="@+id/radio_rm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jozsef Attila"
            style="@style/AppCompatRadioButtonInDialog"
            />
    </RadioGroup>
</LinearLayout>
